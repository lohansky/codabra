<%= form_for(@battle) do |f| %>
  <% if @battle.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@battle.errors.count, "error") %> prohibited this battle from being saved:</h2>

      <ul>
      <% @battle.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :type %><br />
    <%= f.select :type, @battle_types.collect { |bt| [bt.name, bt.battle_class] } %>
  </div>
  <div class="field">
    <%= f.label :program %><br />
    <%= f.select :creator_program_id, @programs.collect { |p| [p.name, p.id] } %>
  </div>
  <div class="actions">
    <%= button_submit_tag t(:'links.ok') %>
  </div>
<% end %>
